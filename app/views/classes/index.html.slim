section.hero.bordered-hero
  img src=image_path('Hero_1600x620.jpg') alt='Our Classes'
  .hero-quote
    h1.title.med-bold-title Helping You Become the Best Version of Yourself

.container
  section.section.tall-section
    .columns
      .column.is-4
        section.section.sticky-sidebar
          h1.title.large-bold-title Classes
          
          aside.menu
            ul.menu-list
              - if @classes.present?
                - @classes.each do |workout|
                  li: a href="##{workout.slug}" = workout.title

      .column#classes-mobile-header.hide
        .section
          h1.title.large-bold-title Classes

      - if @classes.present?
        .column
          section.section
            h2.title.medium-bold-title = @page.headline_content
            = markdown(@page.body_content)

          - @classes.each do |workout|
            section.section id="#{workout.slug}"
              h2.subtitle.medium-bold-title = workout.title
              = markdown(workout.body)

              p.sm-bold-upcase Class Times
              - workout.schedules.ordered_by_time.each do |schedule|
                p
                  span = schedule.formatted_days
                  br
                  span = schedule.formatted_start_time
