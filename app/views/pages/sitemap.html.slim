.container
  section.section.has-text-centered.tall-section
    h1.title.large-bold-title Sitemap

  section.section.tall-section
    .columns
      .column
        h2: a href=about_index_path About
        h2: a href=about_index_path What is Krav Maga?

      .column
        h2: a href=instructors_index_path Instructors
