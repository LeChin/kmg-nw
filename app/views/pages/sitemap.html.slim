          ul.instructor-list
            - @sitemap_instructors.each do |instructor|
              li: a href=instructors_detail_path(slug: instructor.slug) = instructor.name

      .column
        h2: a href=membership_path Membership
        h2: a href=classes_index_path Classes
        h2: a href=schedule_path Schedule

      .column
        h2: a href=photos_path Photos
        h2: a href=videos_path Videos
